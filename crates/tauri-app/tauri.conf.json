{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../../ui/dist"
	},
	"package": {
		"productName": "Resolute",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": false,
				"open": true,
				"ask": true
			},
			"fs": {
				"all": false,
				"exists": true
			},
			"path": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "dev.gawdl3y.resolute",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"title": "Resolute",
				"visible": false,
				"minWidth": 800,
				"minHeight": 600
			}
		]
	}
}
